# Server Configuration
NODE_ENV=production
PORT=8080

# MongoDB Configuration
# Replace with your actual MongoDB Atlas URI
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_atlas_uri

# JWT Configuration
# Generate a strong random secret for production using: node generate-secret.js
JWT_SECRET=your_strong_random_secret

# JWT token expiration (examples: 60, "2 days", "10h", "7d")
JWT_EXPIRES_IN=24h

# Email Configuration
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@deped.gov.ph
EMAIL_PASSWORD=your_app_specific_password

# Frontend URL (no trailing slash)
# Example: https://your-frontend-domain.com
FRONTEND_URL=your_frontend_url

# Rate Limiting
# 15 minutes in milliseconds
RATE_LIMIT_WINDOW_MS=900000
# Adjust based on your application's needs
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Comma-separated list of allowed origins
# Example: https://your-frontend-domain.com,https://admin.your-frontend-domain.com
CORS_ALLOWED_ORIGINS=your_frontend_url

# SSL Configuration (if not using reverse proxy)
SSL_ENABLED=false
SSL_KEY_PATH=path/to/your/key.pem
SSL_CERT_PATH=path/to/your/cert.pem 